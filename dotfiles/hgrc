[ui]
username = Nick Hurley <hurley@todesschaf.org>
ignore = ~/.hgignore

[extensions]
extdiff =
gpg =
transplant =
rebase =
bookmarks =
color =
parentrevspec =
record =
pager =
mq =
localbranch = ~/.hgext/localbranch.py
attic = ~/.hgext/attic.py

[diff]
git = 1
showfunc = 1
unified = 8

[extdiff]
cmd.udiff = diff
opts.udiff = -NpruU15

[bookmarks]
track.current = True

[pager]
pager = LESS='-FSRX' less
ignore = update, push, pull, merge, fetch, convert, clone, record, crecord

[defaults]
commit = -v
log = -f
qnew = -Ue
import = --no-commit

[alias]
apply = import --no-commit

[mq]
git = keep

[merge]
kdiff3.priority = 10
kdiff3.executable = /Applications/kdiff3.app/Contents/MacOS/kdiff3
kdiff3.args = $base $local $other -o $output
p4.priority = 20
p4.premerge = True
p4.executable = /Applications/p4merge.app/Contents/MacOS/p4merge
p4.gui = True
p4.args = $base $local $other $output
p4.binary = False
vimdiff.priority = 30
vimdiff.executable = vim
vimdiff.args = -d $base $local $output $other +close +close
