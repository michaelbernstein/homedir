#!/bin/sh
if hostname | grep salome > /dev/null 2>&1 ; then
    exec /usr/bin/gnome-terminal --geometry=80x35-1920-0 -t Todesschaf -e "/usr/bin/ssh -R 2222:127.0.0.1:22 todesschaf.org"
else
    if hostname | grep magdiel > /dev/null 2>&1 ; then
        exec /usr/bin/gnome-terminal --geometry=80x35-0-0 -t Todesschaf -e "/usr/bin/ssh -R 2020:127.0.0.1:22 todesschaf.org"
    else
        exec /usr/bin/gnome-terminal --geometry=80x35-0-0 -t Todesschaf -e "/usr/bin/ssh todesschaf.org"
    fi
fi
